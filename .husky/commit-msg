#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Conventional Commits validation
commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Regex for conventional commits: type(scope?): message
conventional_commit_regex="^(feat|fix|docs|style|refactor|perf|test|chore|build|ci|revert)(\(.+\))?: .{1,}$"

if ! echo "$commit_msg" | grep -qE "$conventional_commit_regex"; then
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Your commit message:"
  echo "  $commit_msg"
  echo ""
  echo "Expected format (Conventional Commits):"
  echo "  type(scope): subject"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, perf, test, chore, build, ci, revert"
  echo ""
  echo "Examples:"
  echo "  feat: add user authentication"
  echo "  fix(api): resolve rate limiting bug"
  echo "  docs: update README with setup instructions"
  echo ""
  exit 1
fi
